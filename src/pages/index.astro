<script>
  // Step 1. Define all variables for FAQ toggling.
  let questions = document.querySelectorAll(".question");
  let togglerIcons = document.querySelectorAll(".toggler-icon");
  let answers = document.querySelectorAll(".answer");

  // Step 2. Display the appropriate answer when user clicks a question.
  questions.forEach((question, place) => {
    question.addEventListener("click", function () {
      if (answers[place].classList.contains("db")) {
        // Step 3. Hide the answer when a user clicks the question again.
        togglerIcons[place].classList.remove("rotate45");
        answers[place].classList.replace("db", "dn");
      } else {
        togglerIcons[place].classList.add("rotate45");
        answers[place].classList.replace("dn", "db");
      }
    });
  });
</script>

<style>
  #hero {
    background-color: var(--brand-light-blue);
    background: linear-gradient(
      var(--brand-light-blue),
      var(--brand-light-green)
    );
    width: 95%;
  }

  #hero h1 {
    font-size: 1.875rem;
  }

  .cta-button {
    background-color: var(--brand-yellow);
    height: 2.5625rem;
    color: rgba(0, 0, 0, 0.7);
  }

  .how-it-works-section-description,
  .pricing-section-byline {
    max-width: 32.5rem;
  }

  .how-it-works-card {
    width: 15.625rem;
    max-width: 15.625rem;
    height: 28rem;
    max-height: 28rem;
  }

  .step-number {
    width: 1.25rem;
    height: 1.25rem;
  }

  #pricing {
    background-color: var(--brand-light-blue);
    background: linear-gradient(
      var(--brand-light-blue),
      var(--brand-light-green)
    );
    width: 95%;
  }

