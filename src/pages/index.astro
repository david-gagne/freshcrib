    color: black;
  }

  .rotate45 {
    transform: rotate(45deg);
  }

  #sign-up input {
    border-bottom: 1px solid var(--brand-light-gray);
  }

  @media screen and (min-width: 48em) {
    section#hero .hero-section-content {
      flex-direction: row;
      justify-content: space-between;
      max-width: 71.875rem;
    }

    section#hero .hero-section-content > div {
      max-width: 40%;
    }

    section#hero .hero-section-content .hero-column-one {
      max-width: 50%;
    }

    section#hero h1 {
